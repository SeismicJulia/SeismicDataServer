server {
  listen 8000;
  listen [::]:8000;
  
  root /var/www/mkdocs_site/site;
  index index.html;

  location ~ (/private_datasets|/codes) {
    auth_basic "Private";
    auth_basic_user_file /etc/nginx/access_control/.private;
  }

  location ~ (/admin) {
    auth_basic "Admin";
    auth_basic_user_file /etc/nginx/access_control/.admin;
  }

}
